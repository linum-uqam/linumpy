nextflowVersion = '<= 23.10'
singularity{
    autoMounts = true
    enabled = true
}

process {
    publishDir = {"$params.output_directory/$task.process"}
    scratch = true
    errorStrategy = { task.attempt <= 3 ? 'retry' : 'ignore' }
    maxRetries = 3
    stageInMode='symlink'
    stageOutMode='rsync'
    afterScript='sleep 1'
}
